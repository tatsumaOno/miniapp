.col.m4.s12
  .card
    .card__image
      =image_tag "apple.png"
      %span.card-title
        = article.title
    .card__button
      =link_to "Show",article_path(article),class: "waves-effect waves-light light-blue lighten-4 btn "
      - if user_signed_in? && current_user.id == article.user_id
        =link_to "Edit",edit_article_path(article),class: "waves-effect waves-light light-blue lighten-4 btn "
        =link_to "Delete","/articles/#{article.id}",method: :delete,class: "waves-effect waves-light light-blue lighten-4 btn "
